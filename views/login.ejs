<!doctype html>
<html>
<head>
  <title>
    OAuth App
  </title>
  <link rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css' />
</head>
<body>
  <div class='container'>
    <div class='col-md-12'>
      <h1> Login Page</h1>
      <a class='btn btn-outline-secondary' href='/home'> Home</a>
      <% if (user) { %>
        <a class='btn btn-outline-secondary' href='/auth/logout'> Logout</a>
      <% } else {  %>
        <a class='btn btn-outline-secondary' href='/auth/login'> Login</a>
      <% } %>
    </div>
    <div class='col-md-12' style='margin-top:64px;'>
      <h3> Login Options</h3>
      <a class='btn btn-danger' href='/auth/google'> Sign in with Google</a>
    </div>
  </div>

</body>
</html>
